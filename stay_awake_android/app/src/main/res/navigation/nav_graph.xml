<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.example.stay_awake_android.fragments.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_TaskFragment"
            app:destination="@id/TaskFragment" />
    </fragment>

    <fragment
        android:id="@+id/TaskFragment"
        android:name="com.example.stay_awake_android.fragments.TaskFragment"
        android:label="@string/task_fragment_label"
        tools:layout="@layout/fragment_task_list">

        <action
            android:id="@+id/action_TaskFragment_to_HomeFragment"
            app:destination="@id/HomeFragment" />
        <action
            android:id="@+id/action_TaskFragment_to_TaskFormFragment"
            app:destination="@id/TaskFormFragment" />
    </fragment>

    <fragment
        android:id="@+id/TaskFormFragment"
        android:name="com.example.stay_awake_android.fragments.TaskFormFragment"
        android:label="@string/task_fragment_label"
        tools:layout="@layout/fragment_task_form">

        <argument
            android:name="taskId"
            app:argType="string"
            android:defaultValue="0"/>
        <action
            android:id="@+id/action_TaskFormFragment_to_TaskFragment"
            app:destination="@id/TaskFragment" />
    </fragment>

</navigation>